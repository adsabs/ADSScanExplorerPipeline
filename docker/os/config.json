{
  "settings": {
    "number_of_shards": 5,
    "index": {
      "analysis": {
        "analyzer": {
          "text_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["syn_filter", "stop_filter"]
          }
        },
        "filter": {
          "syn_filter": {
            "type": "synonym",
            "updateable": true
          },
          "stop_filter": {
            "type": "stop",
            "ignore_case": true,
            "updatable": true
          }
      },
      "normalizer": {
        "journal_normalizer": {
            "type": "custom",
            "char_filter": ["journal_filter"],
            "filter":["lowercase"]
          },
            "volume_normalizer": {
            "type": "custom",
            "char_filter": ["volume_filter"]
          }
        },
        "char_filter": {
            "journal_filter": {
              "type": "pattern_replace",
              "pattern": "([^.]+)\\.*",
              "replacement": "$1"
            },
            "volume_filter": {
              "type": "pattern_replace",
              "pattern": "0*([1-9]\\d*)",
              "replacement": "$1"
            }
        }
     }
    }
  },
  "mappings": {
    "properties": {
      "text": {
        "type": "text",
        "search_analyzer": "text_analyzer"
      },
      "page_id": {
        "type": "keyword"
      },
      "volume_id": {
        "type": "keyword",
        "copy_to": "volume_id_lowercase" 
      },
      "volume_id_lowercase": {
        "type": "keyword",
        "normalizer": "lowercase"
      },
      "journal": {
        "type": "keyword",
        "normalizer": "journal_normalizer"
      },
      "volume": {
        "type": "keyword",
        "copy_to": "volume_int",
        "normalizer": "volume_normalizer"
      },
      "volume_int": {
        "type": "integer"
      },
      "article_bibcodes": {
        "type": "keyword",
        "copy_to": "article_bibcodes_lowercase" 
      },
      "article_bibcodes_lowercase": {
        "type": "keyword",
        "normalizer": "lowercase"
      },
      "page_type": {
        "type": "keyword"
      },
      "page_number": {
        "type": "integer"
      },
      "page_label": {
        "type": "text"
      },
      "page_color": {
        "type": "keyword"
      },
      "project": {
        "type": "keyword"
      }
    },
    "dynamic": true
  }
}